<<h1><%= @item.id ? 'Edit Item' : 'Create Item' %></h1>
<hr />
<%= form_with(model: [@department, @item], local: true, class: "ui form") do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <br />
  <%= f.label :price %>
  <%= f.text_field :price, required: true %>
  <br />
  <%= f.label :description %>
  <%= f.text_field :description, required: true %>
  <br />
  <br />
  <%= f.submit nil, class: "ui button" %>
<% end %>

 